---
import { Icon } from "astro-icon/components"
import Layout from "@layouts/main.astro"
---
<Layout>
	<div class="text-center w-5/6 max-w-5xl main">
        <span class="inline-block [&>[data-icon]]:w-20 [&>[data-icon]]:h-20 [&>[data-icon]]:text-cyan-200">
            <Icon name="iconoir:question-mark-circle" />
        </span>
        <h1 class="text-4xl my-3 bg-clip-text text-transparent bg-gradient-to-br from-cyan-400 to-violet-700">
                    <span>404 Not found</span>
        </h1>
        <h3 class="text-2xl">
            <a href="/" class="[&>[data-icon]]:w-8 [&>[data-icon]]:h-8 [&>[data-icon]]:inline-block [&>[data-icon]]:align-[-0.5rem]">
                <span>Click to return</span>
                <Icon name="iconoir:arrow-right-circle-solid" />
            </a>
        </h3>
	</div>
</Layout>
